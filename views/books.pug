extend ../layouts/common
block content
  h1 Books
  a(href="/books/create") New
  form(action="/books", method="GET")
    input(type="text", name="q")
    button Search
  form(action="/books/update", method="GET")
    strong Update Title
    br
    label Title
    br
    input(type="text", name="title")
    br
    label New Title
    br
    input(type="text", name="newtitle")
    br
    button Update
  table.table
    tr
      th Title
      th Description
      th
    each book in books
      tr
        td= book.title
        td= book.descriptin
        td
          a(href='/books/' + book.id + '/delete') Delete