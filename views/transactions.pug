extend ../layouts/common
block content
  if errors
    each error in errors
      .alert.alert-danger= error
  h1 Transaction
  a(href="/transactions/create") New
  table.table
    tr
      th
      th Id
      th User
      th Book
      th
    each transaction in collections
      tr
        th
          a(href="/transactions/" + transaction.id + "/delete") Delete
        th= transaction.id
        th= transaction.username
        th= transaction.booktitle
        th
          a(href="/transactions/" + transaction.id + "/complete") Complete